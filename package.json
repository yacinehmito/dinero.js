{
  "name": "dinero.js",
  "version": "1.4.0",
  "description": "An immutable library to create, calculate and format monetary values.",
  "keywords": [
    "amount",
    "immutable",
    "monetary",
    "money"
  ],
  "homepage": "https://sarahdayan.github.io/dinero.js",
  "repository": "https://github.com/sarahdayan/dinero.js",
  "license": "MIT",
  "author": "Sarah Dayan",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/cjs/dinero.js",
  "scripts": {
    "build": "npm run clear && npm run build:js && npm run build:types && npm run build:bundles",
    "build:bundles": "node ./tasks/build.js",
    "build:js": "tsc -p tsconfig.build.json && prettier --write 'lib/**/*.js'",
    "build:types": "api-extractor run",
    "clear": "rm -rf ./dist ./lib",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "docs": "rm -rf docs && ./node_modules/.bin/jsdoc lib/ -r -d ./docs -t ./node_modules/jsdoc-template -c jsdoc.json -R ./README.md -q title=Dinero.js",
    "format": "prettier --write 'tasks/**/*.js' 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "tslint --project ./tsconfig.json --format stylish",
    "lint!": "npm run format && npm run lint",
    "semantic-release": "semantic-release",
    "test": "jest --coverage",
    "travis-deploy-once": "travis-deploy-once"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@microsoft/api-extractor": "^6.3.0",
    "@types/jest": "^23.3.10",
    "commitizen": "^2.10.1",
    "core-js": "^2.5.7",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jsdoc": "^3.5.5",
    "jsdoc-template": "sarahdayan/jsdoc-template",
    "jsverify": "^0.8.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^4.1.0",
    "rollup-plugin-babel-minify": "^5.0.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "semantic-release": "^15.6.3",
    "travis-deploy-once": "^5.0.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": "*"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint!",
      "git add"
    ]
  }
}
